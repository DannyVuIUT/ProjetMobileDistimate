<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_question_answer_height"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="20dp"
    tools:context=".DistanceAnswerFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:autoSizeTextType="uniform"
        android:gravity="bottom|center_horizontal"
        android:textAlignment="gravity"
        android:text="@string/actual_distance_prefix"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/actualDistanceText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:textAlignment="gravity"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text="@string/distance_guess_prefix"/>
        <TextView
            android:id="@+id/guessedDistanceText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:textAlignment="gravity"/>
    </LinearLayout>
</LinearLayout>