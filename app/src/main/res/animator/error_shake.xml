<?xml version="1.0" encoding="utf-8"?>
<!--
###################################################
Animation utilisée sur le chronomètre
quand on PASSE une question au lieu de VALIDER
###################################################
-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="together">
    <objectAnimator
        android:propertyName="textColor"
        android:valueFrom="@color/timer_error"
        android:valueTo="@color/timer_color"
        android:duration="500"
        />
    <set android:ordering="sequentially">
        <objectAnimator
            android:propertyName="translationX"
            android:valueFrom="20dp"
            android:valueTo="-16dp"
            android:duration="50"
            />
        <objectAnimator
            android:propertyName="translationX"
            android:valueFrom="-16dp"
            android:valueTo="12dp"
            android:duration="50"
            />
        <objectAnimator
            android:propertyName="translationX"
            android:valueFrom="12dp"
            android:valueTo="-8dp"
            android:duration="50"
            />
        <objectAnimator
            android:propertyName="translationX"
            android:valueFrom="-8dp"
            android:valueTo="4dp"
            android:duration="50"
            />
        <objectAnimator
            android:propertyName="translationX"
            android:valueFrom="4dp"
            android:valueTo="0dp"
            android:duration="50"
            />
    </set>
</set>